#!/bin/bash
set -x
if grep -q root /etc/group; then
  addgroup -S -g 0 root
  adduser root root
fi
if test -n "${UPDATE_CA}"; then
  updateca="$(which update-ca-certificates)"
  test -x "${updateca}" && "${updateca}"
fi
exec chef-client "$@" \
  ${CHEF_LOGLEVEL:+--log_level=${CHEF_LOGLEVEL}} \
  ${CHEF_ENVIRONMENT:+--environment=${CHEF_ENVIRONMENT}} \
  ${CHEF_RUNLIST:+--runlist=${CHEF_RUNLIST}}
