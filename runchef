#!/bin/bash
exec -e
ln -svf /data/hostfs/etc/passwd /etc/passwd
ln -svf /data/hostfs/etc/shadow /etc/shadow
ln -svf /data/hostfs/etc/group /etc/group
ln -svf /data/hostfs/etc/gshadow /etc/gshadow

exec chef-client --config /etc/chef/client.rb \
  --log_level="${CHEF_LOGLEVEL}" --no-fork \
  --environment="${CHEF_ENV}" --runlist="${CHEF_RUNLIST}" \
  "$@"
